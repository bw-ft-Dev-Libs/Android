<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.lambdaschool.devlibs.ui.ui.listview.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_list"
            app:destination="@id/navigation_list" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_create"
            app:destination="@id/navigation_create" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.lambdaschool.devlibs.ui.ui.dashboard.ListFragment"
        android:label="@string/create"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.lambdaschool.devlibs.ui.ui.create.CreateParentFragment"
        android:label="@string/list_madlibs"
        tools:layout="@layout/fragment_create" />

</navigation>